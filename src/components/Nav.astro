---
import { getCollection } from "astro:content";
const queHacemos = (await getCollection("que-hacemos")).sort(
  (a, b) => a.data.date.valueOf() - b.data.date.valueOf()
);
---

<div class="navbar border-b-[1px] border-gray-400">
  <div class="navbar-start">
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
        <!-- Burger -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          ><path
            stroke-linecadescription="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h8m-8 6h16"></path></svg
        >
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
      >
        <li><a href="/">Inicio</a></li>
        <li><a href="/quienes-somos">Quienes somos</a></li>
        <li>
          <a>Que hacemos</a>
          <ul class="p-2">
            {
              queHacemos.map((x: any) => (
                <li>
                  <a href={`/que-hacemos/${x.slug}/`}>{x.data.title}</a>
                </li>
              ))
            }
          </ul>
        </li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contacto">Contacto</a></li>
      </ul>
    </div>
  </div>
  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1">
      <li><a href="/">Inicio</a></li>
      <li><a href="/quienes-somos">Quienes somos</a></li>
      <li>
        <details>
          <summary>Que hacemos</summary>
          <ul class="p-2 rounded-t-none z-10">
            {
              queHacemos.map((x: any) => (
                <li>
                  <a href={`/que-hacemos/${x.slug}/`}>{x.data.title}</a>
                </li>
              ))
            }
          </ul>
        </details>
      </li>
      <li><a href="/blog">Blog</a></li>
      <li><a href="/contacto">Contacto</a></li>
    </ul>
  </div>
  <div class="navbar-end"></div>
</div>
